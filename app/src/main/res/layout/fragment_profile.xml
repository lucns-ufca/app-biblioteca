<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_basic" />

    <ImageButton
        android:id="@+id/buttonUser"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_7"
        android:background="@drawable/fab_white_transparent"
        android:src="@drawable/icon_person" />

    <TextView
        android:id="@+id/textuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_3"
        android:fontFamily="@font/black"
        android:text="Usuário"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textusertype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textuser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_2"
        android:fontFamily="@font/black"
        android:text="Aluno"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textusertype"
        android:layout_marginTop="@dimen/margin_3"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_5"
        android:background="@drawable/line_gradient" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_7"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_3"
            android:background="@drawable/button_state"
            android:text="Dados Cadastrais" />

        <Button
            android:id="@+id/button4"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_3"
            android:background="@drawable/button_state"
            android:text="Meus empréstimos" />

        <Button
            android:id="@+id/button5"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_3"
            android:background="@drawable/button_state"
            android:text="Meus Favoritos" />

        <Button
            android:id="@+id/button6"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_3"
            android:background="@drawable/button_state"
            android:text="Meus Débitos" />

        <Button
            android:id="@+id/button7"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/button_state"
            android:text="Sair" />
    </LinearLayout>
</RelativeLayout>